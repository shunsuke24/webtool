{
    "compilerOptions": {
      "target": "esnext",
      "useDefineForClassFields": true,
      "module": "esnext",
      "moduleResolution": "node",
      "strict": true,
      "jsx": "preserve",
      "sourceMap": true,
      "resolveJsonModule": true,
      "isolatedModules": true,
      "esModuleInterop": true,
      "lib": ["esnext", "dom"],
      "skipLibCheck": true,
      "baseUrl": "./",
      "paths": {
        "@/*": ["src/*"],
        "~/*": ["public/*"]
      }
    },
    // ↓ 追記
    "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue", "src/api/index.js", "src/api/methods.js"],
    "references": [{ "path": "./tsconfig.node.json" }]
  }